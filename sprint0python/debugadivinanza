score = 0
def pregunta1(score):
    respuesta = input("tengo agujas y no se coser,tengo numeros y no se leer\n a.reloj \n b.escorpion \n c.calculadora \n")
    if respuesta == "a":
        print("Congrats")
        score=  score +10
        return score
    else:
        print("Dumbass")
        score =  score - 5
score=pregunta1(score)
print(score)